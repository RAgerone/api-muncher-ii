<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title></title>
</head>
<body>
  <%# show one recipe here %>
  <div class="row top-block-title-image">

    <section class = "recipe-image small-12 medium-6 large-6 column">
      <img src=<%=@recipe.image %> alt=<%= @recipe.name %>>
      <div class="recipe-link">
        <a href="<%= @recipe.url %>">Full Recipe </a>
      </div>
    </section>

    <div class="columns recipe-name column-block small-12 medium-6 large-6">
      <h1 class = "recipe-header"><%= @recipe.name %></h1>
    </div>
  </div>



  <div class="wrap row small-up-1 medium-up-2 large-up-3">

    <section class = "ingredients column">
      <h3>Ingredients</h3>
      <ul>
        <% @recipe.ingredients.each do |ingredient| %>
        <li><%= ingredient %></li>
        <% end %>
      </ul>
    </section>



    <section class = "nutrients column">
      <table class="hover">
        <thead>
          <th width="200">Nutrition Information</th>
          <th width="150"></th>
        </thead>
        <tbody>


          <% @recipe.nutrient_info.each do |info| %>
          <tr>
            <td><%= info[1]['label']%></td>
            <td><%= info[1]['quantity'].round(2)%></td>
          </tr>
        </th>
        <% end %>
      </tbody>

    </table>
  </section>

  <section class = "health-labels column">
    <h3>Health Labels</h3>
    <ul>
      <% @recipe.health_labels.each do |health_label| %>
      <li>
        <span class="nav-icon">
          <i class="fa fa-heart-o"></i>
        </span>
        <span><%= health_label %></span>
      </li>
      <% end %>
    </ul>
  </section>
</div>

</body>
</html>
